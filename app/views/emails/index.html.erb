<p style="color: green"><%= notice %></p>

<h1>Emails</h1>

<% admin = Administrator.find_by user_id: current_user %>
<% if current_user && admin.trusted? %>
  <!-- Display content for trusted users -->

  <div id="emails">
    <% @emails.each do |email| %>
      <%= render email %>
      <p>
        <%= link_to "Show this email", email %>
      </p>
    <% end %>
  </div>

  <%= link_to "New email", new_email_path %>

<% else %>
  <!-- Display content for non-trusted users or non-logged-in users -->
  <p>Not Authorised</p>
<% end %>
